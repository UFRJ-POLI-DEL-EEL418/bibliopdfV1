<?xml version="1.0" encoding="UTF-8"?>
<Context path="/bibliopdfV1">
    <Resource 
        name="jdbc/authority"
        url="jdbc:postgresql://127.0.0.1:5432/usuariossenhas"
        username="postgres"
        password="abracadabra"

        auth="Container"
        driverClassName="org.postgresql.Driver"
        logAbandoned="false"
        maxActive="20"
        maxIdle="10"
        maxWait="-1"
        removeAbandoned="true"
